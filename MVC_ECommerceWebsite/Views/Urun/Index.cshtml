@using MVC_ECommerceWebsite.Models.Siniflar
@model List<Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (Urun urun in Model)
    {
        <tr>
            <td>@urun.Urunid</td>
            <td>@urun.UrunAd</td>
            <td>@urun.Marka</td>
            <td>@urun.Stok</td>
            <td>@urun.AlisFiyat</td>
            <td>@urun.SatisFiyat</td>
            <td>@urun.Kategori.KategoriAd</td>
            <td>@urun.UrunGorsel</td>     
            <td><a href="/Urun/UrunSil/@urun.Urunid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@urun.Urunid" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Urun/YeniUrun" class="btn btn-info">Yeni Ürün</a>